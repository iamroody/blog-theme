{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{> "horizontal"}}

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">
    <div class="cards-wrapper">
    <div class="cards">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
    </div>
    </div>
    {{! Previous/next page links - displayed on every page }}
    {{pagination}}
</main>

<div class="info">
    <a id="weixin-qrcode" title="关注金数据官方微信"><i class="fa fa-weixin" aria-hidden="true"></i></a>
    <div id="qrcode" style="display:none;">
    <img src="{{asset 'img/weixin_qrcode.jpg'}}">
    </div>
    <a title="金数据微博" href='http://weibo.com/iamjinshuju'><i class="fa fa-fw fa-lg fa-weibo"></i></a>
    <a title="帮助中心" href='https://help.jinshuju.net/'><i class="fa fa-book" aria-hidden="true"></i></a>
    <a title="邮件" href='mailto:support@jinshuju.net'><i class="fa fa-envelope" aria-hidden="true"></i></a>
</div>
